{
  "name": "playwrightium",
  "version": "0.1.8",
  "description": "Model Context Protocol server that exposes reusable Playwright actions.",
  "main": "dist/index.js",
  "bin": {
    "playwrightium": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".playwright-mcp"
  ],
  "scripts": {
    "build": "npm run build:tsc && npm run build:copy-assets",
    "build:tsc": "tsc",
    "build:copy-assets": "node -e \"const fs=require('fs'); fs.cpSync('src/prompts','dist/prompts',{recursive:true}); fs.cpSync('src/chatmodes','dist/chatmodes',{recursive:true});\"",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "playwright",
    "browser-automation",
    "model-context-protocol",
    "testing",
    "e2e",
    "web-scraping"
  ],
  "author": "Analysta AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/analysta-ai/playwrightium.git"
  },
  "bugs": {
    "url": "https://github.com/analysta-ai/playwrightium/issues"
  },
  "homepage": "https://github.com/analysta-ai/playwrightium#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "dotenv": "^17.2.3",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
